.content {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.content .nav {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    width: 100%;
}
.nav-left {
  width: 25%;
  min-height: 100%;
  background: #f5f5f5;
}
.nav-left .nav-left-item {
    height: 100rpx;
    font-size: 30rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
}
.nav-right {
  width: 75%;
}
.nav-right .search_con {
    width: 490rpx;
    height: 38rpx;
    margin: 10rpx auto 40rpx;
    font-size: 22rpx;
    text-align: center;
    position: relative;
}
.nav-right .search_con input {
      width: 100%;
      height: 100%;
      border-radius: 30rpx;
      background: #f4f4f4;
}
.nav-right .search_con > image {
      width: 26rpx;
      height: 30rpx;
      position: absolute;
      right: 30rpx;
      top: 10rpx;
      border-radius: 0;
}
.nav-right swiper {
    width: 515rpx;
    height: 178rpx;
    margin: 0 auto 20rpx;
}
.nav-right swiper image {
      width: 100%;
      height: 100%;
      border-radius: 10rpx;
}
.nav-right .nav-right-item {
    width: 28%;
    height: 210rpx;
    float: left;
    text-align: center;
    padding: 15rpx;
    font-size: 28rpx;
}
.nav-right image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.active {
  color: #f96b66;
  background: #fff;
  border-left: 10rpx solid #f96b66;
}

